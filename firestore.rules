rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================
    // Helper Functions
    // ============================================================
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isHeadCook() {
      return exists(/databases/$(database)/documents/roles_head-cook/$(request.auth.uid));
    }

    function isSupervisor() {
      return exists(/databases/$(database)/documents/roles_supervisor/$(request.auth.uid));
    }

    function isManager() {
      return exists(/databases/$(database)/documents/roles_manager/$(request.auth.uid));
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isStaff() {
      return isAdmin() || isHeadCook() || isSupervisor() || isManager();
    }

    // Allow a new user with company email to create their own staff role doc
    function canCreateOwnStaffRole(userId) {
      return isOwner(userId) &&
             request.auth.token.email != null &&
             request.auth.token.email.matches('.*@cruiselink\\.com');
    }

    // ============================================================
    // Voyager Profiles and Private Data
    // ============================================================
    match /voyagers/{userId} {
      // A user can read and update their own profile, admin can read all.
      allow read: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);

      // Subcollections like bookings, orders, etc.
      match /{subcollection}/{docId} {
        allow read, create, delete: if isOwner(userId);
        allow update: if isOwner(userId) ||
                      (isStaff() && request.resource.data.voyagerId == resource.data.voyagerId);
      }
    }

    // ============================================================
    // Publicly Readable Item Collections
    // ============================================================
match /cateringItems/{itemId} {
  // Authenticated users can read
  allow read: if isAuthenticated();

  // Admins still have full access (create, update, delete)
  allow write: if isAdmin();

  // Head-cook can only UPDATE existing documents
   allow update: if isHeadCook();
}



    match /stationeryItems/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isSupervisor();
    }

    match /movies/{movieId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ============================================================
    // Denormalized Collections for Staff Access
    // ============================================================
    match /allCateringOrders/{orderId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isHeadCook() || isAdmin();
    }

    match /allStationeryOrders/{orderId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isSupervisor() || isAdmin();
    }

    match /allResortMovieTickets/{ticketId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isManager() || isAdmin();
    }

    match /allBeautySalonBookings/{bookingId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isManager() || isAdmin();
    }

    match /allFitnessCenterBookings/{bookingId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isManager() || isAdmin();
    }

    match /allPartyHallBookings/{bookingId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isManager() || isAdmin();
    }

    // ============================================================
    // Messages Collection
    // ============================================================
    match /messages/{messageId} {
      allow create: if isAuthenticated() &&
                     request.resource.data.voyagerId == request.auth.uid;
      allow read, update: if isAdmin();
    }

    // ============================================================
    // Role Management Collections
    // ============================================================
    match /roles_admin/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin() || canCreateOwnStaffRole(userId);
    }

    match /roles_head-cook/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin() || canCreateOwnStaffRole(userId);
    }

    match /roles_supervisor/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin() || canCreateOwnStaffRole(userId);
    }

    match /roles_manager/{userId} {
      allow read: if isAdmin();
      allow write: if isAdmin() || canCreateOwnStaffRole(userId);
    }
  }
}